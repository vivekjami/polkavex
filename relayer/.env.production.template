# Production Environment Configuration for Relayer
# Copy this file to .env.production and update the values

# Server Configuration
NODE_ENV=production
PORT=3002
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=https://your-ui-domain.com
CORS_CREDENTIALS=true

# Database/Cache Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here
POLKADOT_WS_URL=wss://rpc.polkadot.io

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
ONEINCH_API_KEY=your_1inch_api_key_here
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/relayer.log

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
HEALTH_CHECK_INTERVAL=30000

# Performance Configuration
MAX_CONCURRENT_SWAPS=10
SWAP_TIMEOUT=300000
CACHE_TTL=60000
