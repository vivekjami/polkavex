# Polkavex Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API (Get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Ethereum Configuration (Sepolia Testnet)
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your-infura-project-id
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key-for-testnet
ETHEREUM_NETWORK=sepolia

# Polkadot Configuration (Westend Testnet)  
POLKADOT_WS_URL=wss://westend-rpc.polkadot.io
POLKADOT_SEED_PHRASE=your-polkadot-seed-phrase-for-testnet

# 1inch API (Get from ETHGlobal dashboard)
ONEINCH_API_KEY=your-1inch-api-key-here

# Application Configuration
PORT=3001
NODE_ENV=development

# Database (Optional - for production)
DATABASE_URL=postgresql://username:password@localhost:5432/polkavex

# Security
JWT_SECRET=your-jwt-secret-for-api-auth
